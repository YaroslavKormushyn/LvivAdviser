<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle"
                    data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Lviv Adviser", "Index", "Home", null, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                @if (!@User.Identity.IsAuthenticated)
                {
                    <li>
                        @Html.ActionLink("Log In", "LogIn", "Account", null, null)
                    </li>
                    <li>
                        @Html.ActionLink("Sign Up", "SignUp", "Account", null, null)
                    </li>
                }
                else
                {
                    <li>
                        @Html.ActionLink("Log Out", "Logout", "Account", null, null)
                    </li>
                    <li>
                        @Html.ActionLink("Profile", "Index", "User", null, null)
                    </li>
                }
            </ul>
        </div>
        @if (TempData.ContainsKey("Message"))
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }
        @if (TempData.ContainsKey("Error"))
        {
            <div class="alert alert-danger">@TempData["Error"]</div>              
        }
    </div>
</div>
