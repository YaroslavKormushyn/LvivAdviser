@model IEnumerable<string>
@Html.ActionLink(
    "Home",
    "ViewContent",
    "Content",
    null,
    new
    {
        @class = "btn btn-block btn-default btn-lg" + 
            ((ViewBag.SelectedType != "Food" 
                && ViewBag.SelectedType != "Rest" 
                && ViewBag.SelectedType != "FreeTime" ) ? " btn-primary" : "")
    })

@foreach (var link in Model)
{
    @Html.RouteLink(link, new
    {
        controller = "Content",
        action = "ViewContent",
        type = link,
        page = 1
    },
        new
        {
            @class = "btn btn-block btn-default btn-lg" + 
                (link == ViewBag.SelectedType ? " btn-primary" : "")
        })
}
