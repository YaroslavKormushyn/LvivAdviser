@{
    ViewBag.Title = "HomePage";
}
<html>
<head>
    @Html.Partial("_StyleTemplate")
</head>

<body>
    @Html.Partial("_GuestBar")

    <div class="row centered">
        <div class="col-lg-8 col-lg-offset-2">
            <h3>
                We are happy to welcome you here!
            </h3>
            <br />
            <p>
                This site was created by a few students to help you to find your best emothions in this city.<br />
                Feel free to surf on our creation! And have a nice time!
            </p>
        </div>
    </div>
    <div id="headerwrap">
    </div>

    <br />

    <div id="choise">
        <div class="container">
            <div class="row centered">
                <h4>What you want to do next?</h4>
                <div class="col-lg-4">
                    <div class="tilt">
